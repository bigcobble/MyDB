<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sdx.mydb.MainActivity">
    <Button
        android:id="@+id/create_db_buttion"
        android:text="create db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/add_data_buttion"
        android:text="add data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/update_data_buttion"
        android:text="update data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/delete_data_buttion"
        android:text="delete data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/query_data_buttion"
        android:text="query data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
